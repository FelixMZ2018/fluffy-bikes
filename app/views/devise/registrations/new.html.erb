<div class="container w-25 shadow p-3 mb-5 bg-white rounded pt-8 mt-5">
<div class="text-center">
<h2 class="pb-4 pt-3">Sign up</h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, placeholder: "Email",label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email",class: "bg-light pt-2" }%>
    <%= f.input :password,placeholder: "Passsword",label: false,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password",class: "bg-light" } %>
    <%= f.input :password_confirmation,placeholder: "Passsword confirmation",label: false,
                required: true,
                input_html: { autocomplete: "new-password",class: "bg-light" } %>
  </div>

  <div class="form-actions text-right">
    <%= f.button :submit, "Sign up", class: "btn btn-danger mx-auto d-block mt-5"%>
    <%= render "devise/shared/links" %>

  </div>

<% end %>
</div>
