<div class="container">
    <div class="row">

        <div class="col-6">
            <div class="card p-3 mb-3">
                <%= image_tag "bike_placeholder_300x300.png", class: "avatar-large" %>
                <h1>About</h1>
                <p class=""><strong><%= @user.username %></strong></p>
                <p class=""><small>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.</small></p>
                <%= link_to "Edit", edit_user_registration_path, class: "btn btn-danger" %>
            </div>
        </div>

        <div class="col-12">
            <h2 class="text-center">My listings</h2>
            <div class="listings">
                <%@bikes.each do |bike| %>
                <div class="card">
                    <% if bike.photo.attached? %>
                    <%= cl_image_tag bike.photo.key, class: "card-img-top"  %>
                    <% else %>
                    <%= image_tag "bike_placeholder_300x300.png", class: "card-img-top" %>
                    <% end %>
                    <div class="card-body">
                        <h4 class="card-title"><strong> <%= bike.title %></strong></h4>
                        <%= link_to "Deatils", bike_path(bike), class: "btn btn-danger" %>
                    </div>

                </div>
                <% end %>

            </div>
        </div>
    </div>
</div>